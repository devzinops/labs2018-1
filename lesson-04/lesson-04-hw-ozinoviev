# *** Connect to remote host ***
oleh@helpdesk:~$ ssh -p 3822 root@yoko.ukrtux.com
root@yoko.ukrtux.com's password: 
Last login: Sun Aug  5 20:36:07 2018 from 194.44.30.194
root@99fed5271af6:~# 

# *** Change password ***
root@99fed5271af6:~# passwd
Enter new UNIX password: 
Retype new UNIX password: 
passwd: password updated successfully
root@99fed5271af6:~# 

# *** copy my key to remote host ***
oleh@helpdesk:~$ scp -P 3822 /home/oleh/.ssh/id_rsa.pub  root@yoko.ukrtux.com:~/.ssh/id_rsa_ozin.pub
root@yoko.ukrtux.com's password: 
id_rsa.pub                                                                             100%  395     1.5KB/s   00:00    
oleh@helpdesk:~$ 

# *** go to remote host and copy keys to file "authorized_keys" ***
oleh@helpdesk:~$ ssh -p 3822 root@yoko.ukrtux.com
root@yoko.ukrtux.com's password: 
Last login: Mon Aug  6 20:26:48 2018 from 194.44.30.194
root@99fed5271af6:~# ls -ls
total 0
root@99fed5271af6:~# ls -ls ~/.ssh/
total 8
4 -rw-r--r-- 3 root root 395 Dec 19  2017 authorized_keys
4 -rw-r--r-- 1 root root 395 Aug  6 21:05 id_rsa_ozin.pub
root@99fed5271af6:~# 

# *** delete my pub-key ***
root@99fed5271af6:~# rm ~/.ssh/id_rsa_ozin.pub 
root@99fed5271af6:~# ls -ls ~/.ssh/
total 4
4 -rw-r--r-- 1 root root 790 Aug  6 21:10 authorized_keys
root@99fed5271af6:~# 

# *** change rights to 400 for files "authorized_keys" ***
root@99fed5271af6:~# chmod 400 ~/.ssh/authorized_keys 
root@99fed5271af6:~# ls -ls ~/.ssh/
total 4
4 -r-------- 1 root root 790 Aug  6 21:10 authorized_keys
root@99fed5271af6:~# 

# *** and now, I connect to remote host with ssh-kyes. The first time I need to enter PathPharse  ***
oleh@helpdesk:~$ ssh -p 3822 root@yoko.ukrtux.com
Last login: Mon Aug  6 21:13:49 2018 from 194.44.30.194
root@99fed5271af6:~#

